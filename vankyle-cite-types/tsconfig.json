{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "declaration": true,
        // "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "baseUrl": "..",
        "outDir": "./dist",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@models/*": [
                "src/models/*"
            ],
        }
    },
    "include": ["src"]
}